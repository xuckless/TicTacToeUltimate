<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:shared="clr-namespace:TicTacToeUltimate.Shared;assembly=TicTacToeUltimate.Shared"
    xmlns:admob="clr-namespace:Plugin.AdMob;assembly=Plugin.AdMob"
    x:Class="TicTacToeUltimate.MainPage"
    BackgroundColor="{DynamicResource PageBackgroundColor}">

    <!-- Two rows: Blazor on top, Ad banner at bottom -->
    <Grid RowDefinitions="*,Auto">

        <!-- Blazor Hybrid app -->
        <BlazorWebView Grid.Row="0" x:Name="blazorWebView" HostPage="wwwroot/index.html">
            <BlazorWebView.RootComponents>
                <RootComponent Selector="#app" ComponentType="{x:Type shared:Routes}" />
            </BlazorWebView.RootComponents>
        </BlazorWebView>

        <!-- AdMob banner (Plugin.AdMob control is BannerAd) -->
        <!-- Test banner id; replace with your real unit id for release -->
        <admob:BannerAd
            Grid.Row="1"
            AdUnitId="ca-app-pub-3940256099942544/6300978111"
            HeightRequest="50"
            HorizontalOptions="Fill"
            VerticalOptions="End" />
    </Grid>
</ContentPage>